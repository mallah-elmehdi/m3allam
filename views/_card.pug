if (lang === "ar")
    .card.border.text-right.mb-3.d-inline-block.mr-4(style="width:255px")
        a(href=`/${lang}/service?id=${aservice._id}`).text-decoration-none.text-dark
            img(src=`/../graphics/service/${aservice.picture}` class="card-img-top").w-100
        .p-2
            if (aservice.diploma === "oui")
                .grid-7
                    span(data-toggle="tooltip" data-placement="top" title="هذا العامل حاصل على دبلوم في هذا المجال")
                        i.fas.fa-certificate.text-success
                    .grid-0
                        .grid-5.mr-2
                            span= aservice.user.name
                            small.text-muted= `${aservice.experience} : سنوات الخبرة `
                        a(href=`/${lang}/ouvrier?id=${aservice.user._id}`).my-auto  
                            img.m-auto.rounded-pill(src=`/../graphics/worker/${aservice.user.photo}`, alt="profile" width="30px")
            if (aservice.diploma === "non")
                .grid-0
                    .grid-5.mr-2
                        span= aservice.user.name
                        small.text-muted= `${aservice.experience} : سنوات الخبرة `
                    a(href=`/${lang}/ouvrier?id=${aservice.user._id}`).my-auto  
                        img.m-auto.rounded-pill(src=`/../graphics/worker/${aservice.user.photo}`, alt="profile" width="30px")
                  
            .scrl-v
                .card-text.mt-1.fn-12= `${aservice.explain.slice(0, 70)}...`
            .mt-2.scrl-h-cs
                .badge.badge-pill.bg-my.mr-2.mb-2
                    img.bg-info.rounded-circle.mr-1.p-1(src="/../graphics/index/location.png", alt="naraj", width="20px")
                    span=aservice.user.city.ar
                .badge.badge-pill.bg-my.mb-2
                    -for(var i = 0; i < jobs.length; i++)
                        if (jobs[i].fr === aservice.service)
                            -var jobId = jobs[i].fr
                            -var jobName = jobs[i].ar
                    img.mr-1.bg-info.rounded-circle.p-1(src=`/../graphics/index/${jobId}.png`, width="20px")
                    span.my-auto= jobName
        hr.my-1
        if (aservice.user.whatsapp === "oui")
            .px-2.grid-2.pb-1
                .btn.dbiha(dajobta-phone=`${aservice.user.phone}`)
                    i.fab.fa-whatsapp.text-success.fa-2x
                a.btn.btn-outline-success.my-auto.ml-3(href=`tel:${aservice.user.phone}`) اتصل
        if (aservice.user.whatsapp === "non")
            .px-2.pb-1
                a.btn.btn-outline-success.my-auto.w-100(href=`tel:${aservice.user.phone}`) اتصل

